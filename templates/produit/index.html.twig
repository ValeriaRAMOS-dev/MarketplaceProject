{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
{% if is_granted('ROLE_USER') %}{% endif %}

    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Image</th>
                <th>Voir ou éditer</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.name }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.price }}</td>
                <td>{{ produit.stock }}</td>
                <td>{{ produit.image }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">voir</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>pas de produit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        {% for produit in produits %}
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>
                        {{ produit.name }}
                        -
                        {{ produit.price }}
                        €
                    </h2>
                    {#<img class="img-fluid rounded" src="{{ product.image }}" alt="Image de {{ product.title }}">"#}
                    <hr>
                    <a href="{{path('cart_add', {'id': produit.id}) }}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>

            </div>
        {% endfor %}
    </div>

    <a href="{{ path('produit_new') }}">creer nouveau</a>
{% endblock %}